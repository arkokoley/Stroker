{
    "name": "Stroker",
    "n_gpu": 0,
    
    "arch": {
        "type": "StrokeModel",
        "args": {
            "embedding_dim": 2, 
            "hidden_dim": 10, 
            "num_classes": 97
        }
    },
    "data_loader": {
        "type": "UJIDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "my_metric", "my_metric2"
    ],
    "lr_scheduler": {
        "type":"StepLR",
        "args":{
            "step_size":50,
            "gamma":0.1
        }
    },
    "trainer": {
        "epochs": 1000,
        "save_dir": "saved/",
        "save_freq": 1,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "visualization":{
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
